{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${ID}"
    },
    {
      "type": "TextBlock",
      "text": "${Name}",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Ordered by now: ",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${Orders}",
              "weight": "Bolder",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "To Order:",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Number",
              "placeholder": "1",
              "id": "orderId1",
              "label": "Mo",
              "value": 1
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Number",
              "placeholder": "1",
              "id": "order-id2",
              "value": 1,
              "label": "Tu"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Number",
              "placeholder": "1",
              "id": "order-id3",
              "value": 1,
              "label": "We"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Number",
              "placeholder": "1",
              "id": "order-id4",
              "value": 1,
              "label": "Th"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Number",
              "placeholder": "Placeholder text",
              "id": "order-id5",
              "value": 1,
              "label": "Fr"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Order",
      "verb": "order",
      "data": {
        "ID": "${ID}",
        "Name": "${Name}",
        "Orders": "${Orders}"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "View orders",
      "url": "https://adaptivecards.io"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6"
}
